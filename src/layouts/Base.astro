---
import SEO from '../components/SEO.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import '../styles/global.css';

interface Props {
  title: string;
  description: string;
  image?: string;
  lang?: string;
  type?: string;
  source?: { label: string; url: string };
}

const { title, description, image, lang = 'ru', type, source } = Astro.props;
---

<!doctype html>
<html lang={lang}>
  <head>
    <SEO title={title} description={description} image={image} lang={lang} type={type} />
  </head>
  <body>
    <Header lang={lang} />
    <main class="container">
      <slot />
    </main>
    <Footer source={source} />
  </body>
</html>
