---
interface FAQItem {
  question: string;
  answer: string;
}

interface Props {
  title?: string;
  items: FAQItem[];
}

const { title = 'Часто задаваемые вопросы', items } = Astro.props;

const faqSchema = {
  '@context': 'https://schema.org',
  '@type': 'FAQPage',
  mainEntity: items.map((item) => ({
    '@type': 'Question',
    name: item.question,
    acceptedAnswer: {
      '@type': 'Answer',
      text: item.answer,
    },
  })),
};
---

<div class="faq">
  <h3>{title}</h3>
  {items.map((item) => (
    <details>
      <summary>{item.question}</summary>
      <div class="faq__answer">{item.answer}</div>
    </details>
  ))}
</div>

<script type="application/ld+json" set:html={JSON.stringify(faqSchema)} />
